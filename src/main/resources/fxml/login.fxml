<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.javify.controller.LoginController"
      alignment="CENTER" spacing="15" 
      style="-fx-background-color: #121212;">
    
    <padding><Insets top="50" right="50" bottom="50" left="50"/></padding>

    <Label text="Javify" style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold;"/>
    
    <TextField fx:id="usernameField" promptText="Username" 
               style="-fx-background-radius: 30; -fx-padding: 10;"/>
               
    <PasswordField fx:id="passwordField" promptText="Password" 
                   style="-fx-background-radius: 30; -fx-padding: 10;"/>
                   
    <Button text="LOG IN" onAction="#handleLogin" 
            style="-fx-background-color: #1DB954; -fx-text-fill: white; -fx-background-radius: 30; -fx-padding: 10 30; -fx-font-weight: bold;"/>
            
    <Label fx:id="statusLabel" text="" style="-fx-text-fill: red;"/>
</VBox>